{{#if currentUserIsInstructor}}
  <div class='text-center filter-title'><h1>New Skill</h1></div>
    <div class="form-group">
      <label>Name</label>
      {{input type="text" value=name class="form-control"}}
    </div>
    <div class="form-group">
      <label>Module</label>
        {{view "select"
            content=sections
            value=section
            class="form-control"
            prompt="Select Module"
        }}
    </div>
    <div class="form-group">
      <label>Featured?</label>
        {{input type="checkbox" checked=featured}}
    </div>
    <button class="btn btn-default" {{action 'saveSkill'}}>Save Skill</button>
{{else}}
  Please log-in as instructor to create a skill.
{{/if}}
